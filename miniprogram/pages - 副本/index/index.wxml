<!--index.wxml-->
<view class="container">

  <!-- 用户 openid -->
  <view class="userinfo" id="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
    ></button>
    <view>
      <button class="userinfo-nickname">点击获取 openid</button>
    </view>
  </view>


  <!-- 上传图片 -->
  <view class="uploader" bindtap='countAdd'>
    {{count}}
  </view>

  <toast id='testToast'></toast>

</view>
