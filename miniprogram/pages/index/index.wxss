/* banner 区域 */
.swiper-outer{
  width: 100%;
  height: 500rpx;
  overflow: hidden;
}

.swiper-item image{
  width: 100%;
  height: 100%;
}



/* 搜索栏 */
.search-block-outer{
  padding: 20rpx 60rpx;
  background: white;
}

.search-block-row{
  position: relative;
  overflow: hidden;
  border-bottom: 1rpx solid #EFEEEC;
}

.search-block-row text,
.search-block-row input{
  float: left;
  height: 60rpx;
  line-height: 60rpx;
  padding: 20rpx 0;
}

.sbr-label{
  width: 160rpx;
  color: #999;
}

.search-block-row .iconfont{
  position: absolute;
  height: 100rpx;
  line-height: 100rpx;
  color: #ccc;
  font-size: 24rpx;
  right: 0;
}

.sbr-placeholder{
  color: red;
}

.search-block-row text.sbr-date{
  height: 50rpx;
  line-height: 50rpx;
  font-weight: bold;
  font-size: 32rpx;
  padding: 0;
}

.search-block-row text.sbr-date-text{
  color: #999;
  margin-left: 40rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  padding: 0;
}

.sb-btn{
  margin: 40rpx 0 20rpx;
  background: #1FC756;
  color: white;
}

.sb-btn:active{
  background: #1c9e46;
}